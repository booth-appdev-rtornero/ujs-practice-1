        
<li id= "<%= dom_id(task) %>" class="list-group-item">

  <%= task.content %>

  <div class="row">
    <div class="col-md-4">
      <div class="d-grid gap-2">
        <%= link_to move_task_path(task), method: :patch, class: "btn btn-link btn-sm", remote: true do %>
          <% if task.not_yet_started? %>
            <i class="fa-sharp fa-solid fa-forward"></i>
          <% elsif task.in_progress? %>
            <i class="fa-regular fa-circle-check"></i>
          <% else %>
            <i class="fa-sharp fa-solid fa-backward"></i>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="col-md-4">
      <div class="d-grid gap-2">
        <%= link_to edit_task_path(task), class: "btn btn-link btn-sm", remote: true do %>
          <i class="fas fa-edit fa-fw"></i>
        <% end %>
      </div>
    </div>

    <div class="col-md-4">
      <div class="d-grid gap-2">
        <%= link_to task, method: :delete, class: "btn btn-link btn-sm", remote: true do %>
          <i class="fas fa-trash fa-fw"></i>
        <% end %>
      </div>
    </div>
  </div>

</li>
